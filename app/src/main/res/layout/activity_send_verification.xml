<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.Login.SendVerificationActivity">

    <include layout="@layout/layout_head_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x10"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/layout_border_shape"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/send_massage"
                    android:layout_height="@dimen/y30"
                    android:layout_width="0dp"
                    android:layout_weight="0.90"
                    android:background="@null"
                    android:hint="@string/message_code"
                    android:layout_marginLeft="@dimen/x13"
                    android:inputType="number"
                    android:textColor="@color/lightSlateGray"
                    android:textColorHint="@color/lightSlateGray"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/send_massage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y30"
                    android:background="@null"
                    android:layout_marginRight="@dimen/x5"
                    android:text="@string/send_message_code"
                    android:gravity="center"
                    android:textColor="@color/c_blue"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/layout_border_shape"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/set_pwd"
                    android:layout_height="@dimen/y30"
                    android:layout_width="0dp"
                    android:layout_weight="0.90"
                    android:background="@null"
                    android:hint="@string/set_pwd"
                    android:layout_marginLeft="@dimen/x13"
                    android:inputType="textPassword"
                    android:textColor="@color/lightSlateGray"
                    android:textColorHint="@color/lightSlateGray"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/cancle_setpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:visibility="gone"
                    android:src="@mipmap/cancle"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/y35"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_login_ok"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y30"
                    android:background="@drawable/button_style_blue"
                    android:text="@string/determine"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

