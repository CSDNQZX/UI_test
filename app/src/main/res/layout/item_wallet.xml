<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x10"
        android:background="@color/blue_b"
        >
    
    <!---笑脸-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/content_a"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center|left"
                android:src="@mipmap/u26" />
            <TextView
                android:id="@+id/content_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/x10"
                android:text="@string/r4"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/content_c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/content_d"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="@dimen/x10"
                android:text="@string/r4"
                android:textColor="@color/c_green"
                android:textSize="14dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_b"
        android:layout_marginBottom="@dimen/x3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x35"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/f5"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x35"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/g5"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_b"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/x3">
            <!--1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/content_e"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/content_f"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_weight="1"
                    android:text="0.000000"
                    android:gravity="left"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
