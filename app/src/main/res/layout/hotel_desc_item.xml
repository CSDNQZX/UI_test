<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_a_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x3"
        android:background="@color/blue_b"
        android:orientation="vertical">
        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="GRIN-29-180天"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/img_yhj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@mipmap/u430"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/y2"
                        android:gravity="right|center"
                        android:text="优惠券"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_rx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:background="@mipmap/u78"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/text_rx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/y2"
                        android:gravity="right|center"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="热销"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x3"
            android:background="@color/blue_b"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x2"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/k7"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/l7"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/m7"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x3"
                android:background="@color/blue_b"
                android:orientation="vertical">
                <!--1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/power_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="¥ 83.5/份"
                        android:textColor="@color/c_blue"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/reference_yields"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="23.99%"
                        android:textColor="@color/c_blue"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/day_yield_texts"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/x10"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="0.0236"
                            android:textColor="@color/c_blue"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/danwei_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/x10"
                            android:layout_marginLeft="@dimen/x5"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="GRIN/份"
                            android:textColor="@color/c_blue"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>
                <!--2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="@string/n7"
                            android:textColor="@color/lightSlateGray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpower_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 graph/份"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <!--第二列-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/o7"
                            android:textColor="@color/lightSlateGray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/surplus_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20份 "
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <!--第三列-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/d8"
                            android:textColor="@color/lightSlateGray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/release_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x15"
                            android:text="2019-04-05"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>