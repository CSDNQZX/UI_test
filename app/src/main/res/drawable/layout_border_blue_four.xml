<?xml version="1.0" encoding="utf-8"?>
<!--这里是四边边框-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <corners android:topLeftRadius="1dp"
        android:topRightRadius="1dp"
        android:bottomRightRadius="1dp"
        android:bottomLeftRadius="1dp"/>
   <!--&lt;!&ndash; &lt;!&ndash;左上角,右上角，右下角，坐下角&ndash;&gt;&ndash;&gt;-->
    <solid android:color="#20222C" /><!--&lt;!&ndash;lt;!&ndash;主体界面的背景颜色&ndash;&gt;&&ndash;&gt;-->
    <stroke
        android:width="1dp"
        android:color="#336699" /><!--&lt;!&ndash;&lt;!&ndash;&lt;!&ndash;边框大小，颜色&ndash;&gt;&ndash;&gt;-->
    <padding
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp" />
</shape>

