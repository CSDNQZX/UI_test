<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.mining.mine.CashWithdrawalActivity">

    <!--标题栏-->
    <include layout="@layout/layout_head_text" />

    <!--提现-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y3"
        android:background="@color/blue_b"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginBottom="@dimen/x45"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center|left"
                android:text="@string/m4"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@mipmap/u1504"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/y6"
                    android:gravity="center"
                    android:text="招商"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableBottom="@mipmap/u2188"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@drawable/layout_border_white_bottom"
                        android:gravity="center|left"
                        android:text="招商银行(2789)"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/right_goto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginRight="@dimen/x1"
                android:maxHeight="@dimen/y6"
                android:maxWidth="@dimen/y6"
                android:src="@mipmap/ic_right" />

        </LinearLayout>
    </RelativeLayout>
    <!--提现金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_b">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center|left"
            android:text="@string/n4"
            android:textColor="@color/lightSlateGray"
            android:textSize="12dp" />
    </LinearLayout>
    <!--金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_b"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/layout_border_gray_bottom"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center|bottom"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="14dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center|left"
                android:text="6177.30"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="24dp"
                />
        </LinearLayout>
    </LinearLayout>
    <!--余额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_b"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x15"
            android:gravity="center|left"
            android:text="余额￥6177.03,"
            android:textColor="@color/lightSlateGray"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x15"
            android:gravity="center|left"
            android:text="@string/w2"
            android:textColor="@color/c_blue"
            android:textSize="12dp"
            android:background="@drawable/layout_border_blue"
            />
    </LinearLayout>
    <!--提现-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/y20"
        android:background="@color/blue_b"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@drawable/button_style_blue_corners"
            android:text="@string/g2"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>