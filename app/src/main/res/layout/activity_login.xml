<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@mipmap/u1"
    tools:context="com.mining.Login.LoginActivity">

    <include layout="@layout/layout_head_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x35"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border_blue"
            >
            <TextView
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/x5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            >
            <TextView
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/x5"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/x10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <!--输入手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y35"
            android:background="@drawable/layout_border_shape"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_mobile"
                android:layout_height="@dimen/y30"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:background="@null"
                android:hint="@string/mobile_phone"
                android:layout_marginLeft="@dimen/x13"
                android:inputType="phone"
                android:textColor="@color/lightSlateGray"
                android:textColorHint="@color/lightSlateGray"
                android:textSize="14dp" />
            <ImageView
                android:id="@+id/cancle_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x5"
                android:src="@mipmap/cancle"
                android:visibility="gone"
                />
        </LinearLayout>
        <!--请输入6-16位的密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y35"
            android:background="@drawable/layout_border_shape"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_pwd"
                android:layout_height="@dimen/y30"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:background="@null"
                android:hint="@string/input_pwd"
                android:layout_marginLeft="@dimen/x13"
                android:inputType="textPassword"
                android:textColor="@color/lightSlateGray"
                android:textColorHint="@color/lightSlateGray"
                android:textSize="14dp" />
            <ImageView
                android:id="@+id/cancle_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x5"
                android:visibility="gone"
                android:src="@mipmap/cancle"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/y35"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:background="@drawable/button_style_blue"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border_blue"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:id="@+id/forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password_title"
                    android:textColor="@color/c_blue"
                    />
            </LinearLayout>
        </LinearLayout>


      </LinearLayout>
    </LinearLayout>
</LinearLayout>

