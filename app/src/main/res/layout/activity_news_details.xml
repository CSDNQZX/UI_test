<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_b"
    tools:context="com.mining.mine.NewsDetailsActivity">

    <!--显示表头-->
    <include layout="@layout/layout_head_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="关于钱包升级"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="2019-03-05 15:39:20"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="尊敬的xxx客户"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="true"
            android:text="为了保证用户的绝对资金安全和提高警惕转账速度以提供更优质的服务，将3-15开始进行升级"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="挖矿团队"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="right"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="true"
            android:text="2019年3月15号"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="right"
            />
    </LinearLayout>

</LinearLayout>
