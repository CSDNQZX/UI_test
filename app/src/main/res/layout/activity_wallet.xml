<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.wallet.WalletActivity">

    <!--标题-->
    <include layout="@layout/layout_head_title" />
    <!--总资产折合(BTC)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center|left"
            android:text="@string/e5"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
    <!--0.00000000-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center|left"
            android:text="3.94233158"
            android:textColor="@color/c_blue"
            android:textSize="20dp" />
    </LinearLayout>
    <!--≈ 0 USD-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center|left"
            android:text="≈ 19711.6579 USD"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
    <!--上拉刷新-->
    <include layout="@layout/layout_head_loadmore"/>
    <!--适配列表-->
    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="#A9A9A9"
        android:dividerHeight="1dp">
    </ListView>
</LinearLayout>
