<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.power.BTCPaymentActivity">
    <!--标题-->
    <include layout="@layout/layout_head_title" />

    <!--二维码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/blue_b"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@mipmap/u50"
            android:layout_marginTop="@dimen/x25"
            android:layout_marginBottom="@dimen/x20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x130"
                android:gravity="center"
                android:src="@mipmap/u977"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x130"
                android:gravity="center"
                android:textSize="12dp"
                android:text="二维码"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/y6"
            android:background="@color/blue_b"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0x46d45B90eC2eE35F2d4DC7A46F2751B44b243F7F"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/white"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/a7"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue_b"
            android:layout_marginBottom="@dimen/x25"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="@string/z6"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="14dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="0.034726 BTC"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="14dp"
                />
        </LinearLayout>
    </LinearLayout>
    <!--提现-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/button_style_blue_corners"
            android:text="@string/v6"
            android:textColor="@color/white"
            android:textSize="12dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/button_style_white_corners"
            android:text="@string/w6"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
