<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/brown"
        android:orientation="horizontal">
    <!--红包图案-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:background="@drawable/button_style_red"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x3"
            android:background="@drawable/layout_style_yellow_corners"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="红"
                android:textSize="20dp"
                android:textColor="@color/c_red"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_love_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/x15"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/content_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/x15"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/content_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满100减10"
                android:layout_marginLeft="@dimen/x5"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/x15"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border_blue"
                android:text="2019.2.21 00"
                android:textColor="@color/c_blue"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x15"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/content_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="：00-2019.4.30 23:59"
                android:textColor="@color/lightSlateGray"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x15"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/button_style_blue_corners"
                android:gravity="center">

                <TextView
                    android:id="@+id/store_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="@string/use"
                    android:textColor="#fff"
                    android:textSize="12sp"/>

            </LinearLayout>
    </LinearLayout>