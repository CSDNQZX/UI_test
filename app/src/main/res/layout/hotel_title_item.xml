<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <!--笑脸-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_currency"
                android:layout_width="@dimen/x15"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:src="@mipmap/u26" />

            <TextView
                android:id="@+id/img_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x1"
                android:layout_marginRight="@dimen/x1"
                android:gravity="center"
                android:text="@string/i7"
                android:textColor="@color/lightSlateGray"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/layout_border_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wk_js_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:text="@string/j7"
                android:textColor="@color/lightSlateGray"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>