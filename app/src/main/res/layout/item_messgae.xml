<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_b"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        >

        <TextView
            android:id="@+id/content_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center|left"
            android:singleLine="true"
            android:src="@mipmap/u1286"
            android:text="关于钱包升级"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/content_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="center|right"
            android:singleLine="true"
            android:text="2019-03-05 15:39:20"
            android:textColor="@color/white" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/x15"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="true"
            android:text="尊敬的xxx用户"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/content_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="true"
            android:text="为了保证用户的绝对资金安全和提高警惕转账速度以提供更优质的服务，将3-15开始进行升级"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            />
</LinearLayout>
</LinearLayout>

