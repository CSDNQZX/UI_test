<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.mining.mine.TransferActivity">

    <!--标题栏-->
    <include layout="@layout/layout_head_text" />
    <!---->
    <!--android:background="@mipmap/u1934"-->

<!--    android:layout_marginLeft="@dimen/x15"
    android:layout_marginRight="@dimen/x15"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_b"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:background="@mipmap/u1934"
            android:orientation="vertical">
            <!--算力佣金-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/layout_border_gray_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x15"
                    android:drawableLeft="@mipmap/u1945"
                    android:gravity="center"
                    android:text="    从"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@null"
                    android:gravity="center|left"
                    android:text="@string/c2"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>
            <!--钱包-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x15"
                    android:drawableLeft="@mipmap/u1963"
                    android:gravity="center"
                    android:text="    从"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@null"
                    android:gravity="center|left"
                    android:text="@string/s2"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <!--币种-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_b">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center|left"
                android:text="@string/t2"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />
        </LinearLayout>
        <!--笑脸-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y38"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/layout_border_gray_bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/u26"
                    android:gravity="center|left"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x10"
                    android:text="GRIN-29"
                    android:gravity="center|left"
                    android:textColor="@color/white"
                    android:drawableBottom="@mipmap/u187"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/choose_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_right"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!--数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_b">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center|left"
                android:text="@string/u2"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />
        </LinearLayout>
        <!--请输入划转数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/layout_border_gray_bottom"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:hint="@string/v2"
                android:textColorHint="@color/lightSlateGray"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:text="GRIN-29"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />
        </LinearLayout>
        <!--余额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_b"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center|left"
                android:text="余额6177.03 GRIN-29"
                android:textColor="@color/lightSlateGray"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/layout_border_blue"
                android:gravity="center|left"
                android:text="@string/w2"
                android:textColor="@color/c_blue"
                android:textSize="12dp" />
        </LinearLayout>
        <!--提现-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue_b"
            android:orientation="vertical"
            android:paddingTop="@dimen/y20">

            <Button
                android:id="@+id/btn_login_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginBottom="@dimen/x40"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/button_style_blue_corners"
                android:text="@string/p2"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
