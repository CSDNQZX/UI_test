<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.mine.AboutUsActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/layout_head_title"/>

            <!--图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/y35"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:layout_margin="@dimen/y6"
                        android:gravity="center"
                        android:src="@mipmap/u2401"
                        android:textSize="20dp"
                        android:textColor="@color/c_blue"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/b4"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/c4"
                        android:textColor="@color/lightSlateGray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_b"
                android:layout_marginBottom="@dimen/x5"
                >
                <TextView
                    android:id="@+id/content_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="true"
                    android:text="@string/a4"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="14dp"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    />
            </LinearLayout>

            <!--修改登录密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_b"
                android:layout_marginBottom="@dimen/x2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/q3"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31256"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_gravity="center|right"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="14dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:maxHeight="@dimen/y6"
                    android:maxWidth="@dimen/y6"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginBottom="@dimen/x15"
                    android:src="@mipmap/ic_right"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <!--实名验证-->
            <LinearLayout
