<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x15"
    android:layout_marginRight="@dimen/x15"
    android:background="@null"
    android:orientation="vertical">
    <!-- 这里的linearLayout加android:background=""这个属性要谨慎，如果加了后，popwindow是不能半透明了的 -->
    <Button
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x1"
        android:background="@drawable/button_style_white_corners_g"
        android:text="@string/t7"
        android:textSize="14dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/button_style_white_corners_f"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/second_wallet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginBottom="@dimen/x1"
                android:background="@null"
                android:text="@string/u7"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/second_wallet_id"
                android:layout_alignBottom="@+id/second_wallet_id"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x8"
                android:gravity="right|center"
                android:text="$ 0.4616"
                android:textColor="@color/c_blue"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginEnd="@dimen/x8"
                android:layout_toStartOf="@+id/textView3"
                android:gravity="right|center"
                android:text="$ 0.6521"
                android:textSize="10dp"
                 />

        </RelativeLayout>
    </LinearLayout>
<!--    <Button
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x1"
        android:background="@color/white"
        android:text="@string/u7" />-->

    <Button
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/blue_b"
        android:text="@string/v7"
        android:textColor="@color/white"
        />
</LinearLayout>