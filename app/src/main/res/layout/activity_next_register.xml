<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.Login.RegisterNextActivity">

    <include layout="@layout/layout_head_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x35"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/btn_login_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/x5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/layout_border_blue"
                >
                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/x5"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x10"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1">

            <!--输入手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/layout_border_shape"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edt_mobile"
                    android:layout_height="@dimen/y30"
                    android:layout_width="0dp"
                    android:layout_weight="0.90"
                    android:background="@null"
                    android:hint="@string/mobile_phone"
                    android:layout_marginLeft="@dimen/x13"
                    android:inputType="phone"
                    android:textColor="@color/lightSlateGray"
                    android:textColorHint="@color/lightSlateGray"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/cancle_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/layout_border_shape"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/massage_code"
                    android:layout_height="@dimen/y30"
                    android:layout_width="0dp"
                    android:layout_weight="0.90"
                    android:background="@null"
                    android:digits="0123456789"
                    android:hint="@string/message_code"
                    android:layout_marginLeft="@dimen/x13"
                    android:inputType="number"
                    android:textColor="@color/lightSlateGray"
                    android:textColorHint="@color/lightSlateGray"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/send_massage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y30"
                    android:background="@null"
                    android:layout_marginRight="@dimen/x5"
                    android:text="@string/send_message_code"
                    android:gravity="center"
                    android:textColor="@color/c_blue"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/layout_border_shape"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/invitation_code"
                    android:layout_height="@dimen/y30"
                    android:layout_width="0dp"
                    android:layout_weight="0.90"
                    android:background="@null"
                    android:hint="@string/invitation_code"
                    android:layout_marginLeft="@dimen/x13"
                    android:inputType="number"
                    android:textColor="@color/lightSlateGray"
                    android:textColorHint="@color/lightSlateGray"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/cancle_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:src="@mipmap/cancle"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/y35"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_register_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y30"
                    android:background="@drawable/button_style_blue"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agreement"
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/slateGray"
                    android:textSize="10dp"
                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

