<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.mining.power.PaymentActivity">
    <!--标题-->
    <include layout="@layout/layout_head_title" />

    <!--支付-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue_b"
        >
        <TextView
            android:id="@+id/order_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:text="订单号：11010101011"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginBottom="@dimen/x15"
            android:textColor="@color/lightSlateGray"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/x15"
            />
       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="商家订单号：10010101011"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginBottom="@dimen/x15"
            android:textColor="@color/lightSlateGray"
            android:layout_marginRight="@dimen/x15"
            android:textSize="14dp"
            />-->
    </LinearLayout>
    <!--二维码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/blue_b"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_head_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@mipmap/u575"
            />
        <ImageView
            android:id="@+id/image_content_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:gravity="center"
            android:src="@mipmap/u662"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/y6"
            android:background="@color/blue_b"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/lightSlateGray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue_b"
            android:layout_marginBottom="@dimen/x25"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="@string/z6"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/pay_number_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="￥884.00"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:padding="@dimen/x5"
            android:layout_margin="@dimen/x15"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:background="@color/white"
            android:hint="请输入你的付款账号"
            />
        </LinearLayout>
    </LinearLayout>
    <!--提现-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20">
        <Button
            android:id="@+id/pay_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/button_style_blue_corners"
            android:text="@string/v6"
            android:textColor="@color/white"
            android:textSize="12dp" />
        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/button_style_white_corners"
            android:text="@string/w6"
            android:textSize="12dp" />
    </LinearLayout>


